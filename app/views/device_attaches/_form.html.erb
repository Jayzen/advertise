<%= form_with(model: @device_attach, local: true, html: { multipart: true}, url: device_device_attaches_path, method: :post) do |form| %>
  <% unless @device_attach.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% @device_attach.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <div class="form-group">
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </div>
  
  <div class="form-group">
    <%= form.submit "新建", class: "btn btn-primary" %>
  </div> 
<% end %>
